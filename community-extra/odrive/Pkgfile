# Depends on: 
 
description="Google Drive GUI"
packager="liberodark"
url="https://github.com/liberodark/ODrive"

name=odrive
version=0.2.0
release=3

source=(https://github.com/liberodark/ODrive/releases/download/${version}/odrive_${version}_amd64.deb)

build() {

ar x odrive_${version}_amd64.deb
tar xvf data.tar.xz
cp -r opt $PKG
cp -r usr $PKG
}
